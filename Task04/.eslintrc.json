{
	"env": {
		"commonjs": true,
		"es6": true,
		"node": true
	},
	"extends": "eslint:recommended",
	"globals": {
		"Atomics": "readonly",
		"SharedArrayBuffer": "readonly"
	},
	"parserOptions": {
		"ecmaVersion": 2018
	},
	"rules": {
		"indent": ["error", "tab", { "SwitchCase": 1 }],
		"linebreak-style": ["error", "unix"],
		"quotes": ["warn", "double"],
		"semi": ["error", "always"],
		"eol-last": ["warn", "always"],
		"comma-dangle": ["warn", "always-multiline"],
		"max-len": ["error", { "code": 80 }]
	}
}
